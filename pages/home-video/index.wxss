/* pages/home-video/index.wxss */
.video{
  width: 100%;
  display: grid;
  column-gap: 10px;
  row-gap: 10px;
  justify-content: space-between;
  grid-template-columns: repeat(2, 1fr);
  box-sizing: border-box;
  overflow-y: auto;
  padding: 10px 10px;
}
.video>view{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.video .item .album{
  position: relative;
}
.video .item .album .image{
  width: 100%;
  height: 90px;
  border-radius: 4px;
}
.video .item .album .info{
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 10px;
  left: 5px;
  right: 5px;
  font-size: 12px;
  color:#fff
}
.video .item .content{
  position: relative;
  margin-top: 5px;
  font-size: 12px;
  -webkit-line-clamp: 2;
}