.video{
  width: 100%;
  display: grid;
  column-gap: 15rpx;
  row-gap: 15rpx;
  justify-content: space-between;
  grid-template-columns: repeat(2, 1fr);
  box-sizing: border-box;
  /* overflow-y: auto; */
  padding: 8rpx 8rpx;
}
.video>view{
  display: flex;
  flex-direction: column;
  width: 100%;
}