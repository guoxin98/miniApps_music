/* pages/list-detail/index.wxss **/
.page {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow-x: unset;
}

.page-before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  filter: blur(10px); /* 虚拟背景模糊效果 */
  z-index: -1;
}

.container {
  display: flex;
  padding: 40rpx;
  height: 330rpx;
}
.container .image{
  width: 250rpx !important;
  height: 250rpx !important;
  border-radius: 10rpx;
}
.container .intro {
  flex:1;
  display: flex;
  flex-direction: column;
  color:#fff;
  justify-content: space-between;
  padding: 30rpx;
}
.intro .description{
  color:#f4f4f4bd;
  font-size: 28rpx;
  max-width: 350rpx;
  word-wrap:break-word;
}
.list-song{
  height: auto;
  background-color: #fff;
  margin-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
}