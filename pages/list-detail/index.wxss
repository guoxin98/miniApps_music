/* pages/list-detail/index.wxss **/
.page {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.page::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  background-image: url("https://p1.music.126.net/pcYHpMkdC69VVvWiynNklA==/109951166952713766.jpg"); /* 你的虚拟背景图片链接 */
  filter: blur(10px); /* 虚拟背景模糊效果 */
  z-index: -1;
}

.container {
  display: flex;
  padding: 40rpx;
  height: 330rpx;
}
.container .image{
  width: 250rpx;
  height: 250rpx;
  border-radius: 10rpx;
}
.container .intro {
  flex:1;
  display: flex;
  flex-direction: column;
  color:#fff;
  justify-content: space-between;
  padding: 30rpx;
}
.intro .description{
  color:#f4f4f4bd;
  font-size: 28rpx;
}

