/* pages/login/index.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: #f8f8f8;
}

.logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
}

.login-form {
  width: 80%;
  padding: 32rpx;
  border-radius: 24rpx;
  background-color: #fff;
  box-shadow: 0px 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.input {
  flex: 1;
  height: 60rpx;
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  background-color: #f8f8f8;
  font-size: 24rpx;
  color: #333;
}

.input::placeholder {
  color: #999;
}

.code-button {
  margin-left: 50rpx !important;
  height: 60rpx;
  width: fit-content !important;
  border: none;
  border-radius: 8rpx;
  background-color: #409eff;
  color: #fff;
  font-size: 24rpx;
}

.button-group {
  display: flex;
  justify-content: center;
}

.button {
  width: 100%;
  height: 60rpx;
  border: none;
  border-radius: 8rpx;
  background-color: #409eff;
  color: #fff;
  font-size: 24rpx;
}
