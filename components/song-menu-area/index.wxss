.list-container{
  display: flex;
  overflow-x: auto;
  padding-bottom:40rpx;
  width: 100vw;
  position: relative;
  left:-20rpx;
}
.scroll-item{
  display: inline-block;
}
.image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 4px;
}
.view-item{
  padding-left: 20rpx;
}
.view-item:last-of-type{
  padding-right: 20rpx;
}

.view-item{
  display: flex;
  flex-direction: column;
}
.item-name{
  font-size: 24rpx;
  color: #777;
}
