/* components/song-menu-area/index.wxss */
.list-container{
  display: flex;
  overflow-x: auto;
  padding-bottom:40rpx;
  width: 100vw;
  position: relative;
  left:-20rpx;
}
.scroll-item{
  display: inline-block;
}
.image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 4px;
}
.view-item{
  padding-left: 20rpx;
  position: relative;
}
.view-item:last-of-type{
  padding-right: 20rpx;
}
.view-item:last-of-type .play-count{
  right: 35rpx;
}
.view-item{
  display: flex;
  flex-direction: column;
}
.item-name{
  font-size: 24rpx;
  color: #777;
}
.play-count{
  color:#fff;
  position: absolute;
  text-align: right;
  z-index: 999;
  font-size: 16rpx;
  right: 15rpx;
  top: 166rpx;
}
.play-count .count-text{
  background-color: #777;
  padding: 6rpx;
  border-radius: 8rpx;
}